#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>
#include <dt-bindings/zmk/mouse.h>
#include <dt-bindings/zmk/backlight.h>
#include <dt-bindings/zmk/ext_power.h>


#define SYM 1
#define UPPER 2

/ {
    behaviors {
        td0: tap_dance_0 {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
            tapping-term-ms = <400>;
            bindings = <&mkp LCLK>, <&bt BT_CLR>;
        };
    };
    behaviors {
        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            tapping-term-ms = <500>;
            bindings = <&out &kp>;
        };
    };
    combos {
        compatible = "zmk,combos";
        combo_m_left_clk {
            timeout-ms = <100>;
            key-positions = <0 3>; // Shoulder1 + BBKey
            bindings = <&mkp LCLK>;
            layers = <0>;
        };
        combo_m_right_clk {
            timeout-ms = <100>;
            key-positions = <1 3>; // Shoulder2 + BBKey
            bindings = <&mkp RCLK>;
            layers = <0>;
        };
        combo_left {
            timeout-ms = <100>;
            key-positions = <0 2>; // Shoulder1 + CallKey
            bindings = <&kp LEFT>;
            layers = <0>;
        };
        combo_right {
            timeout-ms = <100>;
            key-positions = <1 6>; // Shoulder2 + EndCall
            bindings = <&kp RIGHT>;
            layers = <0>;
        };
        combo_up {
            timeout-ms = <100>;
            key-positions = <0 39>; // Shoulder1 + Space
            bindings = <&kp UP>;
            layers = <0>;
        };
        combo_down {
            timeout-ms = <100>;
            key-positions = <1 39>; // Shoulder2 + Space
            bindings = <&kp DOWN>;
            layers = <0>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {

            bindings = <
//         --------------------------------------------------------------------------------------------------------------------------         
//         |    Shoulder Key1    |                                                                             |    Shoulder Key2    |     
// |         Call key      |      Blackberry Key        |    Trackpad    |             Back Key                |             Endcall Key          |
// |     Q      |     W    |     E    |     R    |      T      |       Y        |       U        |        I        |       O      |      P        |     
// |     A      |     S    |     D    |     F    |      G      |       H        |       J        |        K        |       L      |      ←        |  
// |     alt    |     Z    |     X    |     C    |      V      |       B        |       N        |        M        |       $      |    Enter      |   
//        |         aA     |         0           |           SPACE              |         SYM         |        aA          |       
//        -----------------------------------------------------------------------------------------------------------------
                 &msc SCRL_UP                                                                                       &msc SCRL_DOWN
    &mt ESC CLCK            &kp LGUI                            &mkp LCLK                          &mt C_AC_HOME K_BACK              &kp TAB
    &mt HASH Q   &mt N1 W   &mt N2 E    &mt N3 R  &mt LPAR T    &mt RPAR Y        &mt UNDER U      &mt MINUS I      &mt PLUS O       &mt AT P
    &mt STAR A   &mt N4 S   &mt N5 D    &mt N6 F  &mt SLASH G   &mt COLON H       &mt DLLR J       &mt APOS K       &kp L            &kp BSPC
    &kp LSHFT    &mt N7 Z   &mt N8 X    &mt N9 C  &mt QMARK V   &mt EXCL B        &mt COMMA N      &mt DOT M        &kp SEMI         &kp ENTER
    &kp LCTRL               &kp LALT                            &kp SPACE                          &tog SYM                          &tog UPPER
            >;
        };


        sym_layer {

            bindings = <        
                 &kp C_VOL_UP                                                                                       &kp C_VOL_DN
    &kp PSCRN               &kp C_AC_SEARCH                     &mkp LCLK                          &kp F5                            &kp F12 
    &kp HASH     &kp N1     &kp N2      &kp N3    &mt LBKT LPAR &mt RBKT RPAR     &kp UNDER        &kp MINUS        &kp PLUS         &kp AT
    &kp STAR     &kp N4     &kp N5      &kp N6    &kp SLASH     &kp COLON         &kp SEMI         &kp APOS         &kp DQT          &kp DEL
    &kp LSHFT    &kp N7     &kp N8      &kp N9    &kp QMARK     &kp EXCL          &kp COMMA        &kp DOT          &kp C_MUTE       &kp ENTER
    &kp LCTRL               &kp N0                              &kp SPACE                          &tog SYM                          &tog UPPER
            >;
        };

        upper_layer {

            bindings = <
                 &msc SCRL_LEFT                                                                                       &msc SCRL_RIGHT
    &bt BT_SEL 0            &bt BT_SEL 1                             &mkp LCLK                      &bt BT_SEL 2                     &bt BT_SEL 3
    &mt C_AC_HOME K_BACK &kp UP &kp ESC &sys_reset &ext_power EP_TOG  &mkp RCLK   &kp LT           &kp GT          &kp PIPE         &kp KP_EQUAL
    &kp LEFT     &kp DOWN   &kp RIGHT   &none     &kp BSLH          &kp AMPS      &kp LBRC         &kp RBRC        &kp CARET        &kp BSPC
    &kp LSHFT    &none      &none       &td0      &bl BL_DEC        &bl BL_TOG    &bl BL_INC       &none           &bootloader      &kp ENTER
    &kp LCTRL               &kp LALT                                 &hm OUT_TOG SPACE              &tog SYM                         &tog UPPER
            >;
        };
    };
};

